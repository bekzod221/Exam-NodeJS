<div class="container">
    <div class="page-header">
        <h1 class="page-title">My Favorites</h1>
        <p class="page-subtitle">Your saved vehicles</p>
    </div>

    <div class="bookmarks-content">
        <% if (bookmarks && bookmarks.length > 0) { %>
            <div class="bookmarks-grid">
                <% bookmarks.forEach(function(car) { %>
                    <div class="bookmark-card">
                        <div class="bookmark-image">
                            <img src="<%= car.images?.exterior?.[0] || car.images?.modelType || '/assets/images/chevrolet.jpg' %>" 
                                 alt="<%= car.brand %> <%= car.model %>" 
                                 loading="lazy">
                            <button class="remove-bookmark-btn" onclick="removeBookmark('<%= car._id %>')">
                                <i class="fas fa-heart-broken"></i>
                            </button>
                        </div>
                        
                        <div class="bookmark-details">
                            <h3 class="car-name"><%= car.brand %> <%= car.model %></h3>
                            <p class="car-category"><%= car.category?.name || 'Vehicle' %></p>
                            <div class="car-specs">
                                <span class="spec-item">
                                    <i class="fas fa-calendar"></i>
                                    <%= car.year %>
                                </span>
                                <span class="spec-item">
                                    <i class="fas fa-tachometer-alt"></i>
                                    <%= car.mileage?.toLocaleString() %> km
                                </span>
                                <span class="spec-item">
                                    <i class="fas fa-gas-pump"></i>
                                    <%= car.fuelType %>
                                </span>
                            </div>
                            <div class="car-price">
                                <span class="price-amount">$<%= car.price?.toLocaleString() %></span>
                            </div>
                            
                            <div class="bookmark-actions">
                                <a href="/models/<%= car.brand.toLowerCase() %>/<%= car._id %>" class="btn btn-primary">
                                    View Details
                                </a>
                                <button class="btn btn-secondary add-to-cart-btn" onclick="addToCart('<%= car._id %>')">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <div class="empty-icon">ðŸ’”</div>
                <h2>No favorites yet</h2>
                <p>You haven't added any vehicles to your favorites yet.</p>
                <a href="/models" class="btn btn-primary">Browse Vehicles</a>
            </div>
        <% } %>
    </div>
</div>

<style>
.bookmarks-content {
    padding: var(--space-xl) 0;
}

.bookmarks-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--space-xl);
    margin-top: var(--space-lg);
}

.bookmark-card {
    background: var(--clr-bg-secondary);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: all 0.3s ease;
    border: 1px solid var(--clr-border);
}

.bookmark-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
}

.bookmark-image {
    position: relative;
    height: 200px;
    overflow: hidden;
}

.bookmark-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.bookmark-card:hover .bookmark-image img {
    transform: scale(1.05);
}

.remove-bookmark-btn {
    position: absolute;
    top: 10px;
    right: 10px;
    background: rgba(239, 68, 68, 0.9);
    color: white;
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
}

.remove-bookmark-btn:hover {
    background: #ef4444;
    transform: scale(1.1);
}

.bookmark-details {
    padding: var(--space-lg);
}

.car-name {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--clr-text);
    margin-bottom: var(--space-xs);
}

.car-category {
    color: var(--clr-primary);
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: var(--space-sm);
}

.car-specs {
    display: flex;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
    flex-wrap: wrap;
}

.spec-item {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--clr-text-muted);
    font-size: 0.85rem;
}

.spec-item i {
    color: var(--clr-primary);
}

.car-price {
    margin-bottom: var(--space-lg);
}

.price-amount {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--clr-primary);
}

.bookmark-actions {
    display: flex;
    gap: var(--space-sm);
}

.bookmark-actions .btn {
    flex: 1;
    padding: var(--space-sm) var(--space-md);
    font-size: 0.9rem;
}

.empty-state {
    text-align: center;
    padding: var(--space-xxl) 0;
}

.empty-icon {
    font-size: 4rem;
    margin-bottom: var(--space-lg);
}

.empty-state h2 {
    font-size: 1.5rem;
    color: var(--clr-text);
    margin-bottom: var(--space-sm);
}

.empty-state p {
    color: var(--clr-text-muted);
    margin-bottom: var(--space-lg);
}

@media (max-width: 768px) {
    .bookmarks-grid {
        grid-template-columns: 1fr;
        gap: var(--space-lg);
    }
    
    .bookmark-actions {
        flex-direction: column;
    }
    
    .car-specs {
        gap: var(--space-sm);
    }
}
</style>

<script>
function removeBookmark(carId) {
    if (confirm('Remove this vehicle from favorites?')) {
        toggleBookmark(carId).then(() => {
            // Reload the page to update the list
            window.location.reload();
        });
    }
}
</script>
